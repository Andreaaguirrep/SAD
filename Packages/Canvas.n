  FrameTickX[yy_,anc_,Mt_,logdt_,fltag_,font_,fun_:({}&)]:=
    Module[{fm,zero,s0,logt,s,sout,{texp,exps,exp}=TickExp[Mt],
      tag2="E"//fltag},
      StandardForm[
        Switch[First[Canvas$Axes],
