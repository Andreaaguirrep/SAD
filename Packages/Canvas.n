          Log,
          Scan[(
            StandardForm[$FORM="";s="10`u"//#];
            CanvasWidget[Create$Text] = {
              {Canvas$Coord1[{#,0}][[1]],yy},
              Null@@Override[Null@@fun[#,1,s],
                Anchor->anc,Text->s,Tags->{fltag},
                Font->font]})&,Mt],
