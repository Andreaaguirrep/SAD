      Do[bl=CanvasWidget[BBox[{"LF$Y2"//i,"FL$Y2"//i,"F$Y2"//i}]];
        If[bl<=>{} && bl[[1]]<pos[[1]] && bl[[2]]<=pos[[2]]<=bl[[4]],
          fl=Max[fl,bl[[3]]]],
        {i,0,Canvas$Frame}]];
    Round[
      Max[9,size*0.7,Min[w/EffectiveStringLength[t,16]*FontFactor,pos[[1]]-fl-1,size*1.3]]]];
  DefaultSize[t_,w_,size_,pos_,"w"]:=Module[{wc=CanvasWidget[Width],bl,fl},
    fl=wc;
    StandardForm[
      Do[bl=CanvasWidget[BBox[{"LF$Y1"//i,"FL$Y1"//i,"F$Y1"//i}]];
        If[bl<=>{} && bl[[3]]>pos[[1]] && bl[[2]]<=pos[[2]]<=bl[[4]],
          fl=Min[fl,bl[[1]]]],
        {i,0,Canvas$Frame}]];
    Round[
      Max[9,size*0.7,Min[w/EffectiveStringLength[t,16]*FontFactor,fl-pos[[1]]-1,size*1.3]]]];
  DefaultSize[t_,w_,size_,pos_,"n"]:=Module[{wc=CanvasWidget[Height],bl,fl},
