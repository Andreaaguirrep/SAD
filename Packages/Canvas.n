  MakeTitle["",__]:=Null;
  MakeTitle[t_,size_,p_]:=Module[{{pos,w,anc}=TitlePosition[p],sz,it=0},
    While[~RealQ[w],
      If[it++ > 10, Return[]];
      Sleep[0.3];
