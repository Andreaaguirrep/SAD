Cases[h,{"example",__},Infinity][1,2],
"\n</PRE><HR>\n<H3><A NAME=result>Results:</A></H3><PRE>"];
 While[l=ReadString[fr];l<=>EndOfFile,
   Write[f,l];
   If[StringPosition[l,"! draw"]<=>{},
     Write[f,"</PRE><IMG SRC=\"",l[StringPosition[l," "][-1,1]+1,-1],
             ".png\" WIDTH=500><PRE>"]];
   ];
 Write[f,"</PRE><HR>\n</BODY>"];
 Close[f];

