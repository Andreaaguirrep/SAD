feig[m_,f0_Real,f1_Real,f2_Real,f3_Real]:=(
  feig[m,f0,f1,f2,f3]=
    Module[{a,ev,u,r},
      csrc@mx=m;
      csrc@MakePipe[];
      a=Module[{
        a22=CSRMatrix[csrc@pipe,{csrc@dx,csrc@dy,f0,f1,f2,f3},ka,0,csrc@cent,22],
        a23=CSRMatrix[csrc@pipe,{csrc@dx,csrc@dy,f0,f1,f2,f3},ka,0,csrc@cent,23],
        a32=CSRMatrix[csrc@pipe,{csrc@dx,csrc@dy,f0,f1,f2,f3},ka,0,csrc@cent,32],
        a33=CSRMatrix[csrc@pipe,{csrc@dx,csrc@dy,f0,f1,f2,f3},ka,0,csrc@cent,33]},
        Join[MapThread[Join,{a22,a23}],MapThread[Join,{a32,a33}]]];
      {ev,u}=Eigensystem[a];
      r=Reverse[Sort[Thread[{ev,u}]]]]);

findeig[mx_,fu_:{0.66,0.66,1,0.3}]:=FindRoot[{
  (
    fe=feig[mx,x,y,z,u];
    f67=Abs[fe[[7,2,1]]]>Abs[fe[[6,2,1]]];
    fel=fe[[Range[7],1]];
    If[~f67,fel=Join[Take[fel,5],Reverse[Take[fel,-2]]]];
    re=(Plus@@(fel/kx))/7;
    res=Plus@@((fel/kx-re)^2);
    Print[{x,y,z,u,re,res}];
    fel[[1]])/ks0==1,
  fel[[2]]/kd1==1,
  fel[[3]]/ks1==1,
  fel[[4]]/ks2==1,
  fel[[5]]/ks3==1,
  fel[[6]]/ks4==1,
  fel[[7]]/ks5==1},
  {x,fu[[1]],{0,3}},
  {y,fu[[2]],{-5,5}},
  {z,fu[[3]],{0,3}},
  {u,fu[[4]],{-5,5}}];

